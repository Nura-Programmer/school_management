generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
}

model School {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  address   String
  createdAt DateTime  @default(now())
  teachers  Teacher[]
}

model Teacher {
  id        Int      @id @default(autoincrement())
  firstName String
  surname   String
  schoolId  Int
  createdAt DateTime @default(now())
  school    School   @relation(fields: [schoolId], references: [id])

  @@unique([firstName, surname, schoolId])
}
